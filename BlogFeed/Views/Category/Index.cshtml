@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}


<h1>Blog Categories</h1>
<div class="text-end my-3">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create new Category</a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-secondary">
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm" title="Edit">
                        <i class="fas fa-edit">Edit</i>
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm" title="Delete">
                        <i class="fas fa-trash">Delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
