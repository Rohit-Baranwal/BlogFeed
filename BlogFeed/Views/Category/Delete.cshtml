@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure want to delete this Category??</h4>

<dl class="row mt-3">
    <dt class="col-md-3">Name</dt>
    <dd class="col-md-9">@Model.Name</dd>
    <dt class="col-md-3">Description</dt>
    <dd class="col-md-9">@Model.Description</dd>
</dl>

<form asp-action="DeleteConfirm" method="post">
    <input asp-for="Id" hidden />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-2"> Cancel</a>
</form>